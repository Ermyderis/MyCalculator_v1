<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:shrinkColumns="*">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="453dp"
            android:layout_weight="3">
    <TextView
        android:id="@+id/screen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="0"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:scrollbars = "vertical"
        android:gravity="center|right"
        android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >

            <Button
                android:id="@+id/buttonMC"
                android:text="MC"
                android:layout_height="match_parent"
                android:textSize="25sp"


                />

            <Button
                android:id="@+id/buttonMR"
                android:text="MR"
                android:layout_height="match_parent"
                android:textSize="25sp"


                />

            <Button
                android:id="@+id/buttonMS"
                android:text="MS"
                android:layout_height="match_parent"
                android:textSize="25sp"


                />

            <Button
                android:id="@+id/buttonMplus"
                android:text="M+"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"


                />

            <Button
                android:id="@+id/buttonMminus"
                android:text="M-"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"


                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/buttonAC"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/buttonDEL"
                android:text="DEL"
                android:onClick="numberDel"
                android:layout_column="2"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/buttonPlusMinus"
                android:text="+-"
                android:onClick="numbersignchange"
                android:layout_column="4"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button7"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonDivision"
                android:text="/"
                android:onClick="operatorevent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonProcent"
                android:text="%"
                android:onClick="operatoreventprocent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button4"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonMultiplication"
                android:text="*"
                android:onClick="operatorevent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonroot"
                android:text="âˆš"
                android:onClick="operatoreventroot"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button1"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/button2"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonMinus"
                android:text="-"
                android:onClick="operatorevent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonPlus"
                android:text="+"
                android:onClick="operatorevent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button0"
                android:text="0"
                android:onClick="numberEvent"
                android:layout_span="2"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/buttonDot"
                android:text="."
                android:onClick="numberEvent"
                android:layout_span="1"
                android:layout_height="match_parent"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/buttonEqual"
                android:text="="
                android:onClick="equalEvent"
                android:layout_span="2"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:textSize="25sp"
                />


        </TableRow>



    </TableLayout>
